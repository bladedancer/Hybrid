{
	"schemaVersion": "4",
	"info": {
		"name": "messaging - post /send/{recipient}"
	},
	"parameter": {
		"properties": {
			"params": {
				"type": "object",
				"description": "The parameters from the endpoint."
			},
			"request": {
				"type": "object",
				"description": "The HTTP request."
			},
			"config": {
				"type": "object",
				"description": "The service's configuration"
			},
			"env": {
				"type": "object",
				"description": "The host OS environment"
			}
		},
		"additionalProperties": false,
		"required": [
			"params",
			"request",
			"config",
			"env"
		]
	},
	"start": "Ground.1",
	"nodes": {
		"GoogleCloudTranslate.1": {
			"type": "nodehandler://@axway/api-builder-plugin-fn-swagger/GoogleCloudTranslate",
			"name": "Translate Message",
			"method": "language.translations.list",
			"parameters": [
				{
					"name": "target",
					"type": "jsonpath",
					"value": "$.locale"
				},
				{
					"name": "key",
					"type": "jsonpath",
					"value": "$.config.demo.translate.key"
				},
				{
					"name": "q",
					"type": "jsonpath",
					"value": "$.params.body.message"
				}
			],
			"outputs": {
				"200": {
					"routes": [
						"condition.1"
					],
					"context": "$.translate.message"
				},
				"default": {
					"routes": [
						"condition.1"
					],
					"context": "$.error"
				},
				"error": {
					"routes": [
						"condition.1"
					],
					"context": "$.error"
				}
			}
		},
		"condition.1": {
			"type": "nodehandler://axway-flow/condition",
			"name": "Is Error",
			"method": "exists",
			"parameters": [
				{
					"name": "source",
					"type": "jsonpath",
					"value": "$.error"
				}
			],
			"outputs": {
				"true": {
					"routes": [
						"http.1"
					],
					"context": "$.exists"
				},
				"false": {
					"routes": [
						"gm-code.2"
					],
					"context": "$.exists"
				}
			}
		},
		"GoogleCloudTranslate.2": {
			"type": "nodehandler://@axway/api-builder-plugin-fn-swagger/GoogleCloudTranslate",
			"name": "Translate Subject",
			"method": "language.translations.list",
			"parameters": [
				{
					"name": "target",
					"type": "jsonpath",
					"value": "$.locale"
				},
				{
					"name": "key",
					"type": "jsonpath",
					"value": "$.config.demo.translate.key"
				},
				{
					"name": "q",
					"type": "jsonpath",
					"value": "$.params.body.subject"
				}
			],
			"outputs": {
				"200": {
					"routes": [
						"condition.1"
					],
					"context": "$.translate.subject"
				},
				"default": {
					"routes": [
						"condition.1"
					],
					"context": "$.error"
				},
				"error": {
					"routes": [
						"condition.1"
					],
					"context": "$.error"
				}
			}
		},
		"http.1": {
			"type": "nodehandler://axway-flow/http",
			"name": "Complete Error",
			"method": "setresponse",
			"parameters": [
				{
					"name": "status",
					"type": "number",
					"value": "400"
				},
				{
					"name": "body",
					"type": "jsonpath",
					"value": "$.error"
				}
			],
			"outputs": {
				"next": {
					"context": "$.response",
					"routes": []
				}
			}
		},
		"gm-code.2": {
			"type": "nodehandler://@bladedancer/api-builder-plugin-gm-code/gm-code",
			"name": "Collate Response",
			"method": "execute",
			"parameters": [
				{
					"name": "inputs",
					"type": "jsonpath",
					"value": "$"
				},
				{
					"name": "function",
					"type": "string",
					"value": "\"(ctx) => {\\n\\tlet subject = 'No Subject';\\n    try {\\n    \\tsubject = ctx.translate.subject.data.data.translations[0].translatedText;\\n    } catch(ex) {\\n    \\t// Ignore\\n    }\\n    \\n    let message = 'No Message';\\n    try {\\n    \\tmessage = ctx.translate.message.data.data.translations[0].translatedText;\\n    } catch(ex) {\\n    \\t// Ignore\\n    }\\n        \\n\\treturn {\\n    \\t\\\"locale\\\": ctx.locale,\\n        \\\"subject\\\": subject,\\n        \\\"message\\\": message\\n    }\\n}\""
				}
			],
			"outputs": {
				"next": {
					"context": "$.response",
					"routes": [
						"gmail-utils.1"
					]
				},
				"error": {
					"context": "$.error",
					"routes": [
						"http.2"
					]
				}
			}
		},
		"http.2": {
			"type": "nodehandler://axway-flow/http",
			"name": "Complete",
			"method": "setresponse",
			"parameters": [
				{
					"name": "status",
					"type": "number",
					"value": "200"
				},
				{
					"name": "body",
					"type": "jsonpath",
					"value": "$.response"
				}
			],
			"outputs": {
				"next": {
					"context": "$.response",
					"routes": []
				}
			}
		},
		"gm-code.1": {
			"type": "nodehandler://@bladedancer/api-builder-plugin-gm-code/gm-code",
			"name": "Log",
			"method": "execute",
			"parameters": [
				{
					"name": "inputs",
					"type": "jsonpath",
					"value": "$.to"
				},
				{
					"name": "function",
					"type": "string",
					"value": "\"(res) => {\\nconsole.log(JSON.stringify(res));\\n}\""
				}
			],
			"outputs": {
				"next": {
					"context": "$.return",
					"routes": [
						"condition.2"
					]
				},
				"error": {
					"context": "$.error",
					"routes": [
						"condition.2"
					]
				}
			}
		},
		"gmail-utils.1": {
			"type": "nodehandler://@bladedancer/api-builder-plugin-gm-gmailutils/gmail-utils",
			"name": "Format Message",
			"method": "formatMessage",
			"parameters": [
				{
					"name": "to",
					"type": "jsonpath",
					"value": "$.recipient"
				},
				{
					"name": "subject",
					"type": "jsonpath",
					"value": "$.response.subject"
				},
				{
					"name": "message",
					"type": "jsonpath",
					"value": "$.response.message"
				}
			],
			"outputs": {
				"next": {
					"context": "$.emailmessage",
					"routes": [
						"Gmail.1"
					]
				}
			}
		},
		"Gmail.1": {
			"type": "nodehandler://@axway/api-builder-plugin-fn-swagger/Gmail",
			"name": "gmail.users.messages.send",
			"method": "gmail.users.messages.send",
			"parameters": [
				{
					"name": "userId",
					"type": "string",
					"value": "\"me\""
				},
				{
					"name": "body",
					"type": "jsonpath",
					"value": "$.emailmessage"
				}
			],
			"outputs": {
				"200": {
					"routes": [
						"http.2"
					],
					"context": "$.sent"
				},
				"default": {
					"routes": [
						"http.2"
					],
					"context": "$.response"
				},
				"error": {
					"routes": [
						"http.2"
					],
					"context": "$.error"
				}
			},
			"authorizations": [
				{
					"name": "Oauth2",
					"type": "credential",
					"value": "gmail"
				}
			]
		},
		"Ground.1": {
			"type": "nodehandler://@axway/api-builder-plugin-fn-swagger/Ground",
			"name": "getAddressbookContact",
			"method": "getAddressbookContact",
			"parameters": [
				{
					"name": "firstname",
					"type": "jsonpath",
					"value": "$.params.recipient"
				}
			],
			"outputs": {
				"200": {
					"context": "$.to",
					"routes": [
						"gm-code.1"
					]
				},
				"default": {
					"context": "$.error",
					"routes": [
						"gm-code.3"
					]
				},
				"error": {
					"context": "$.error",
					"routes": [
						"gm-code.3"
					]
				}
			}
		},
		"gm-code.3": {
			"type": "nodehandler://@bladedancer/api-builder-plugin-gm-code/gm-code",
			"name": "Ground Error",
			"method": "execute",
			"parameters": [
				{
					"name": "inputs",
					"type": "jsonpath",
					"value": "$.grounderror"
				},
				{
					"name": "function",
					"type": "string",
					"value": "\"(err) => {\\nconsole.error(err.message || err)\\n}\""
				}
			],
			"outputs": {
				"next": {
					"context": "$.return",
					"routes": [
						"setcontext.3"
					]
				},
				"error": {
					"context": "$.error",
					"routes": [
						"setcontext.3"
					]
				}
			}
		},
		"setcontext.3": {
			"type": "nodehandler://axway-flow/setcontext",
			"name": "Default Recipient",
			"method": "setcontext",
			"parameters": [
				{
					"name": "value",
					"type": "string",
					"value": "\"axway.demo.bolger@gmail.com\""
				}
			],
			"outputs": {
				"next": {
					"context": "$.recipient",
					"routes": [
						"setcontext.4"
					]
				}
			}
		},
		"setcontext.4": {
			"type": "nodehandler://axway-flow/setcontext",
			"name": "Default Locale",
			"method": "setcontext",
			"parameters": [
				{
					"name": "value",
					"type": "string",
					"value": "\"fr\""
				}
			],
			"outputs": {
				"next": {
					"context": "$.locale",
					"routes": [
						"GoogleCloudTranslate.1",
						"GoogleCloudTranslate.2"
					]
				}
			}
		},
		"setcontext.5": {
			"type": "nodehandler://axway-flow/setcontext",
			"name": "Recipient",
			"method": "setcontext",
			"parameters": [
				{
					"name": "value",
					"type": "jsonpath",
					"value": "$.to.data[0].email"
				}
			],
			"outputs": {
				"next": {
					"context": "$.recipient",
					"routes": [
						"condition.3"
					]
				}
			}
		},
		"setcontext.6": {
			"type": "nodehandler://axway-flow/setcontext",
			"name": "Locale",
			"method": "setcontext",
			"parameters": [
				{
					"name": "value",
					"type": "jsonpath",
					"value": "$.to.data[0].address.country"
				}
			],
			"outputs": {
				"next": {
					"context": "$.locale",
					"routes": [
						"GoogleCloudTranslate.1",
						"GoogleCloudTranslate.2"
					]
				}
			}
		},
		"condition.2": {
			"type": "nodehandler://axway-flow/condition",
			"name": "Recipient Exists",
			"method": "exists",
			"parameters": [
				{
					"name": "source",
					"type": "jsonpath",
					"value": "$.to.data[0].email"
				}
			],
			"outputs": {
				"true": {
					"routes": [
						"setcontext.5"
					],
					"context": "$.exists"
				},
				"false": {
					"routes": [
						"setcontext.3"
					],
					"context": "$.exists"
				}
			}
		},
		"condition.3": {
			"type": "nodehandler://axway-flow/condition",
			"name": "Locale Exists",
			"method": "exists",
			"parameters": [
				{
					"name": "source",
					"type": "jsonpath",
					"value": "$.to.data[0].address.country"
				}
			],
			"outputs": {
				"true": {
					"routes": [
						"setcontext.6"
					],
					"context": "$.exists"
				},
				"false": {
					"routes": [
						"setcontext.4"
					],
					"context": "$.exists"
				}
			}
		}
	}
}